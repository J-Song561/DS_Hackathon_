{
  "manifest_version": 3,
  "name": "WatchWise - 유해도 검사기",
  "version": "1.0",
  "description": "유튜브 영상의 유해도를 실시간으로 분석하여 알려줍니다.",

  "action": {
    "default_popup": "frontend/popup.html"
  },

  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/watch*",
        "https://www.youtube.com/shorts/*"
      ],
      "js": ["frontend/js/content_script.js"],
      "css": ["frontend/css/warning_banner.css"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ]
}