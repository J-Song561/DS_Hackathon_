{
  "manifest_version": 3,
  "name": "WatchWise - 유해도 검사기",
  "version": "1.0",
  "description": "유튜브 영상의 유해도를 실시간으로 분석하여 알려줍니다.",

  "action": {
    "default_popup": "frontend/popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content_script.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": ["storage", "tabs"],
  
  "host_permissions": [
    "http://localhost:8000/*",
    "*://*.youtube.com/*"
  ]
}